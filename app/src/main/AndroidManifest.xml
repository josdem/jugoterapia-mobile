<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.jugoterapia.josdem"
          android:versionCode="23"
          android:versionName="0.2.6">

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="25"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".JugoterapiaApplication"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/jugoterapiaTheme">
        <activity android:name=".activity.CategoryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.BeverageActivity"/>
        <activity android:name=".activity.RecipeActivity"/>
        <activity
            android:name=".activity.SignActivity"
            android:label="@string/title_activity_sign">
        </activity>
    </application>

</manifest>